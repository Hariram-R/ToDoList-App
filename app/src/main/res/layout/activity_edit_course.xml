<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCourse">



    <TextView
        android:id="@+id/Name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="27dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Course Name : "
       />

    <EditText
        android:id="@+id/EditNameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name_title"
        android:hint="@string/prompt2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/EditNameField">

        <Button
            android:id="@+id/Tick_Button"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:foreground="@drawable/ic_check_black_24dp"
            android:background="#FFFF"
            />

        <Button
            android:id="@+id/DeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:foreground="@drawable/ic_delete_black_24dp"
            android:background="#FFFF"
            />

    </LinearLayout>


</RelativeLayout>